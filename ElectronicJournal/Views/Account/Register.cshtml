@model ElectronicJournal.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Реєстрація";
}

@{
    var culture = new System.Globalization.CultureInfo("uk-UA");
}

<h2>Реєстрація нового користувача</h2>

<form asp-controller="Account" asp-action="Register">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <label asp-for="Name">Ім'я</label><br />
        <input class="form-control" style="width: 40%" asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="LastName">Прізвище</label><br />
        <input class="form-control" style="width: 40%" asp-for="LastName" />
        <span asp-validation-for="LastName"></span>
    </div>
    <div class="form-group">
        <label asp-for="GroupID">Група</label><br />
        @Html.DropDownListFor(m => m.GroupID, new SelectList(ViewBag.groups, "ID", "Name"), new { @class = "form-control", @style = "width:200px;" })
        <span asp-validation-for="GroupID"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email">e-mail</label><br />
        <input class="form-control" style="width: 40%" asp-for="Email" />
        <span asp-validation-for="Email"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password"></label><br />
        <input class="form-control" style="width: 30%" asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>
    <div class="form-group">
        <label asp-for="PasswordConfirm"></label><br />
        <input class="form-control" style="width: 30%" asp-for="PasswordConfirm" />
        <span asp-validation-for="PasswordConfirm"></span>
    </div>
    <div>
        <input type="submit" class="btn btn-default" value="Реєстрація" />
    </div>
</form>

