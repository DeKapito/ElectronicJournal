@model ElectronicJournal.Models.Missing

@{
    ViewData["Title"] = "AddMissing";
}

<h2>AddMissing</h2>

<h4>Missing</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddMissing">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="StudentID" class="control-label"></label>
                <select asp-for="StudentID" class ="form-control" asp-items="ViewBag.StudentID"></select>
            </div>
            <div class="form-group">
                <label asp-for="IsMissing" class="control-label"></label>
                <select asp-for="IsMissing" class="form-control" asp-items="Html.GetEnumSelectList<IsMissing>()"></select>
                <span asp-validation-for="IsMissing" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LessonID" class="control-label"></label>
                <select asp-for="LessonID" class ="form-control" asp-items="ViewBag.LessonID"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
