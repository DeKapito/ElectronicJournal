@model List<Lesson>

@{
    ViewData["Title"] = "Перегляд";
}

<style>
    .heads {
        color: royalblue
    }

    .formButtons {
        position: relative;
    }

    table td.vertical {
        text-align: center;
        white-space: nowrap;
        -webkit-transform: rotate(-90deg);
        -moz-transform: rotate(-90deg);
        -ms-transform: rotate(-90deg);
        -o-transform: rotate(-90deg);
        transform: rotate(-90deg);
    }

        table td p.vertical {
            margin: 0 -100%;
            display: inline-block;
        }

            table td p:before {
                content: '';
                width: 0;
                padding-top: 110%;
                display: inline-block;
                vertical-align: middle;
            }

    /*table {
        text-align: center;
