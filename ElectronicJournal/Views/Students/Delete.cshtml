@model ElectronicJournal.Models.Student

@{
    ViewData["Title"] = "Видалення студента";
}

<h2>Видалити</h2>

<h3>Ви впевнені, що хочете видалити студента?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <p>Прізвище</p>
        </dt>
        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt>
            <p>Ім'я</p>
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            <p>По-батькові</p>
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Father)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Видалити" class="btn btn-default" /> |
        <a asp-action="Index">Назад до списку</a>
    </form>
</div>
