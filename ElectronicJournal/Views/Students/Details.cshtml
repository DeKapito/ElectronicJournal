@model ElectronicJournal.Models.Student

@{
    ViewData["Title"] = "Деталі про студента";
}

<h2>Деталі</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <p>Прізвище</p>
        </dt>
        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt>
            <p>Ім'я</p>
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            <p>По-батькові</p>
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Father)
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("Admin") || User.IsInRole("GroupLeader"))
    {
    <a asp-action="Edit" asp-route-id="@Model.ID">Редагувати  |</a>
    }
    <a asp-action="Index">Назад до списку</a>
</div>
