@model ElectronicJournal.ViewModels.CreateUserViewModel
@{
    ViewData["Title"] = "Створити користувача";
}

<h2>Створення користувача</h2>

<form asp-action="Create" asp-controller="Users">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name">Ім'я</label><br />
        <input type="text" asp-for="Name"/>
    </div>
    <div class="form-group">
        <label asp-for="LastName">Прізвище</label><br />
        <input asp-for="LastName" />
        <span asp-validation-for="LastName"></span>
    </div>
    <div class="form-group">
        <label asp-for="Group">Група</label><br />
        <input asp-for="Group" />
        <span asp-validation-for="Group"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email">E-mail</label><br />
        <input asp-for="Email" />
        <span asp-validation-for="Email"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password">Пароль</label><br />
        <input type="text" asp-for="Password"/>
    </div>
    <div class="form-group">
        <input type="submit" value="Додати" class="btn btn-default" />
    </div>
</form>

